{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
  <div class="row">
    <div class="mol-md-8 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">Create Project</div>
          <div class="panel-body">
            {{ form_start(form) }}

              <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                  {{ form_row(form.code, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                  {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                  {{ form_row(form.budget, {'type':'number'}) }}
                </div>
              </div>

              <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                  {{ form_row(form.remarks, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                  {{ form_row(form.save, {'attr': {'class': 'btn btn-primary fa fa-btn'}}) }}
                </div>
              </div>

            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
